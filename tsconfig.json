{
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": [
			"es2015",
			"es2016.array.include",
			"es2017.object",
			"esnext",
			"esnext.asynciterable",
			"dom"
		],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": false,
		"noEmit": true,
		"baseUrl": ".",
		"noImplicitThis": false,
		"removeComments": true,
		"resolveJsonModule": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": [
				"./*"
			],
			"@/*": [
				"./*"
			]
		},
		"types": [
			"@types/node",
			"@nuxt/vue-app",
			"plugins/types.d.ts",
			"plugins/asyncComputed.d.ts"
		]
	}
}
